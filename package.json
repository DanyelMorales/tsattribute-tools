{
    "name": "tsattribute-tools",
    "displayName": "tsattribute-tools",
    "description": "Tools to improve coding and code generation for typescript attributes",
    "version": "0.0.1",
    "publisher": "momoThePug",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.tsattribute-tools"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "tsattribute-tools configuration",
            "properties": {
                "tsattribute-tools.comments": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate comments for getters, setters and methods."
                }
            }
        },
        "commands": [
            {
                "command": "extension.tsattribute-tools",
                "title": "Generate code from typescript attributes"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "_test_": "npm run compile && node ./node_modules/vscode/bin/test",
        "test": "mocha -r ts-node/register -r tsconfig-paths/register src/**/*.test.ts"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/chai": "^4.0.4",
        "@types/mocha": "^2.2.42",
        "ts-node": "^3.3.0",
        "tsconfig-paths": "^3.1.1",
        "tspath": "^1.2.10",
        "chai": "^4.1.2"
    },
    "dependencies": {
        "underscore": "^1.9.0"
    }
}